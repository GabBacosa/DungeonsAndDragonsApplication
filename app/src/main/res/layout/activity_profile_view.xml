<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:padding="16dp">

    <!-- Profile Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image"
        android:contentDescription="Profile Image"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Editable Display Name -->
    <EditText
        android:id="@+id/edit_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gab"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:hint="Enter display name"
        android:background="@null" />

    <!-- Editable Username -->
    <EditText
        android:id="@+id/edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@gab.bacosa"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:layout_below="@id/edit_display_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:hint="Enter username"
        android:background="@null" />

    <!-- Editable Bio -->
    <EditText
        android:id="@+id/edit_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a bio about the user. It can be a few lines long."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_below="@id/edit_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Enter bio"
        android:background="@null"
        android:inputType="textMultiLine" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_bio"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:background="#666666"
        android:layout_marginTop="20dp"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/profile_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:background="#666666"/>
</RelativeLayout>
