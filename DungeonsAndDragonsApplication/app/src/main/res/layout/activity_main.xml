<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    android:padding="0dp">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C1C1C"
        android:padding="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="86dp"
            android:layout_height="74dp"
            android:layout_centerInParent="true"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="39dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Settings icon"
            android:src="@drawable/settings" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image"
            android:contentDescription="Profile Image"
            app:shapeAppearanceOverlay="@style/CircularImageView"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_image"
            android:layout_alignTop="@id/profile_image"
            android:text="Gab"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_image"
            android:layout_below="@id/display_name"
            android:text="@gab.bacosa"
            android:textSize="9sp"
            android:textColor="#666666"
            android:layout_marginTop="2dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/character_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon2"
                android:contentDescription="Character Icon"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/character_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/character_icon"
                android:layout_alignParentTop="true"
                android:text="Character Name"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/class_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/character_icon"
                android:layout_below="@id/character_name"
                android:text="Class"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/character_icon"
                android:layout_below="@id/class_name"
                android:text="Date Created"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Level 5"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/species"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_level"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:text="Elf"
                android:textSize="14sp"
                android:textColor="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/character_icon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon1"
                android:contentDescription="Character Icon"
                app:shapeAppearanceOverlay="@style/CircularImageView"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/character_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/character_icon2"
                android:layout_alignParentTop="true"
                android:text="Character Name 2"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/class_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/character_icon2"
                android:layout_below="@id/character_name2"
                android:text="Class 2"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/date_created2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/character_icon2"
                android:layout_below="@id/class_name2"
                android:text="Date Created 2"
                android:textSize="12sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/user_level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Level 5"
                android:textSize="14sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/species2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/user_level2"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:text="Dwarf"
                android:textSize="14sp"
                android:textColor="#000000" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
