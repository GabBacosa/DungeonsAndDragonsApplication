<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D9D9D9"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <!-- Circular ImageView for Character Icon -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/character_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon1"
        android:contentDescription="Character Icon"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp" />

    <!-- Character Name -->
    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/character_icon"
        android:layout_alignParentTop="true"
        android:text="Character Name"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Class Name -->
    <TextView
        android:id="@+id/class_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/character_icon"
        android:layout_below="@id/character_name"
        android:text="Class"
        android:textSize="14sp"
        android:textColor="#666666" />

    <!-- Species (between class name and level) -->
    <TextView
        android:id="@+id/species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_name"
        android:layout_toEndOf="@id/character_icon"
        android:text="Species"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginTop="2dp" />

    <!-- User Level (aligned right and beside species) -->
    <TextView
        android:id="@+id/user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/character_name"
        android:layout_alignBaseline="@id/species"
        android:text="Level 5"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginStart="8dp" />

    <!-- Date Created (below the class name and species) -->
    <TextView
        android:id="@+id/date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/character_icon"
        android:layout_below="@id/species"
        android:text="Date Created"
        android:textSize="12sp"
        android:textColor="#888888" />

</RelativeLayout>
